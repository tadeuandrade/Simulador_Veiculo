<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_parametro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tadeu.simulador_veiculo.parametro">

    <TextView
        android:text="Opção 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/op1"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Juros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/entr"
        android:layout_alignEnd="@+id/entr"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="34dp"
        android:id="@+id/juros" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/taxajuros1"
        android:layout_alignBaseline="@+id/juros"
        android:layout_alignBottom="@+id/juros"
        android:layout_alignStart="@+id/entrada1"
        android:hint="Digite o juros" />

    <TextView
        android:text="Opção 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/op2"
        android:textSize="24sp"
        android:layout_below="@+id/taxajuros1"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/entrada2"
        android:layout_alignBaseline="@+id/entr2"
        android:layout_alignBottom="@+id/entr2"
        android:layout_alignStart="@+id/taxajuros1"
        android:hint="Digite o percentual" />

    <TextView
        android:text="% Entrada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/entr2"
        android:layout_below="@+id/op2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/taxajuros2"
        android:layout_alignBaseline="@+id/juros2"
        android:layout_alignBottom="@+id/juros2"
        android:layout_alignStart="@+id/entrada2"
        android:hint="Digite o juros" />

    <Button
        android:text="Definir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/taxajuros2"
        android:layout_marginBottom="39dp"
        android:id="@+id/definir_param"
        style="@android:style/Widget.Button.Inset" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_marginTop="13dp"
        android:id="@+id/entrada1"
        android:hint="Digite o percentual"
        android:layout_below="@+id/op1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp" />

    <TextView
        android:text="% Entrada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/entr"
        android:layout_alignBaseline="@+id/entrada1"
        android:layout_alignBottom="@+id/entrada1"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Juros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:id="@+id/juros2"
        android:layout_below="@+id/entrada2"
        android:layout_alignStart="@+id/juros" />
</RelativeLayout>
